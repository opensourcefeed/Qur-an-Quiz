<?xml version='1.0' encoding='utf-8'?>
<widget id="com.filmbiopsy.mobileapp" version="1.0.0"
    xmlns="http://www.w3.org/ns/widgets" 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Filmbiopsy</name>
    <description>
        A hybrid app from Filmbiopsy, features Quiz, movie updates and more
    </description>
    <author email="filmbiopsy@gmail.com" href="https://filmbiopsy.com">
        LibreAppFoundation
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <icon density="mdpi" src="res/mipmap-mdpi/filmbiopsy.png" />
        <icon density="hdpi" src="res/mipmap-hdpi/filmbiopsy.png" />
        <icon density="xhdpi" src="res/mipmap-xhdpi/filmbiopsy.png" />
        <icon density="xxhdpi" src="res/mipmap-xxhdpi/filmbiopsy.png" />
        <icon density="xxxhdpi" src="res/mipmap-xxxhdpi/filmbiopsy.png" />
        <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
          <application android:usesCleartextTraffic="true" />
      </edit-config>
  </platform>
  <splash src="res/splash.png" />
  <preference name="SplashMaintainAspectRatio" value="true" />
  <preference name="SplashScreenDelay" value="2000" />
  <preference name="FadeSplashScreen" value="false" />
  <preference name="ShowSplashScreenSpinner" value="false"/>
  <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
  <plugin name="cordova-plugin-apprate" spec="^1.4.0" />
  <plugin name="cordova-plugin-buildinfo" spec="^2.0.2" />
  <plugin name="cordova-plugin-market" spec="^1.2.0" />
</widget>
